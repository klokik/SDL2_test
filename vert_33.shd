#version 330 core

in vec3 a_pos;
in vec3 a_normal;

out vec4 pos;
out vec3 nrm;
out float depth;

uniform mat4 u_modelview;
uniform mat4 u_projection;

void main(void)
{
	pos = u_modelview * vec4(a_pos,1.0);
	nrm = (u_modelview * vec4(a_normal,1.0)).xyz;

	gl_Position = u_projection * pos;
	depth = gl_Position.w;
}