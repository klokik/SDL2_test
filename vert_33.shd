#version 330 core

in vec3 a_pos;
in vec3 a_normal;

out vec4 _pos;
out vec3 _nrm;
out float _depth;

uniform mat4 u_modelview;
uniform mat4 u_projection;

void main(void)
{
	_pos = u_modelview * vec4(a_pos,1.0);
	_nrm = (u_modelview * vec4(a_normal,1.0)).xyz;

	gl_Position = u_projection * _pos;
	_depth = gl_Position.w;
}